PROJECT_NAME='freedombone'

export TEXTDOMAIN=${PROJECT_NAME}-sipfreeext
export TEXTDOMAINDIR="/usr/share/locale"

CONFIG_FILE=/etc/sipwitch.conf

maxnum=201
while (( maxnum < 299 )); do
    if ! grep -q "extension>$maxnum<" $CONFIG_FILE; then
        break;
    fi
    maxnum=$((maxnum + 1))
done
echo $maxnum
exit 0
