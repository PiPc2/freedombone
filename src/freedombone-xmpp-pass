PROJECT_NAME='freedombone'

export TEXTDOMAIN=${PROJECT_NAME}-xmpp-pass
export TEXTDOMAINDIR="/usr/share/locale"

EMAIL_ADDRESS=

function show_help {
    echo ''
    echo $"${PROJECT_NAME}-xmpp-pass -e [email address]"
    echo ''
    exit 0
}

while [[ $# > 1 ]]
do
key="$1"

case $key in
    -h|--help)
    show_help
    ;;
    -e|--email)
    shift
    EMAIL_ADDRESS="$1"
    ;;
    *)
    # unknown option
    ;;
esac
shift
done

if [ ! $EMAIL_ADDRESS ]; then
    show_help
fi

prosodyctl passwd $EMAIL_ADDRESS

exit 0
