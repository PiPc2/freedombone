    function_check git_clone
    git_clone $ZERONET_MAIL_REPO ZeroMail
    if [ ! -d $MESH_INSTALL_DIR/zeronet/ZeroMail ]; then
        echo $'ZeroMail repo could not be cloned'
        exit 6739
    fi
    cd $MESH_INSTALL_DIR/zeronet/ZeroMail
